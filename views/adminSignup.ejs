<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Styled Admin Signup</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    form {
      background: white;
      padding: 30px 40px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(118, 75, 162, 0.3);
      width: 300px;
    }

    form h2 {
      color: #764ba2;
      text-align: center;
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
      color: #764ba2;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
      transition: border 0.3s;
    }

    input:focus {
      border: 1px solid #764ba2;
      outline: none;
    }

    button {
      background: #764ba2;
      color: white;
      padding: 10px;
      width: 100%;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s;
    }

    button:hover {
      background: #5b3d91;
    }
  </style>
</head>
<body>
  <form id="signupForm" action="/admin/signup" method="post">
  <h2>Admin Signup</h2>

  <label for="name">Name:</label>
  <input type="text" name="name" id="name" required />

  <label for="email">Email:</label>
  <input type="email" name="email" id="email" required />

  <label for="mobile">Mobile:</label>
  <input type="tel" name="mobile" id="mobile" required />

  <label for="pass">Password:</label>
  <input type="password" name="pass" id="pass" required />

  <button type="submit">Submit</button>
</form>


    <script>
    document.getElementById("signupForm").addEventListener("submit", function (e) {
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("pass").value.trim();

      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{6,}$/;

      if (!emailPattern.test(email)) {
        alert("Please enter a valid email address.");
        e.preventDefault();
        return;
      }

      if (!passwordPattern.test(password)) {
        alert(
          "Password must have:\n- At least 1 uppercase letter\n- At least 1 lowercase letter\n- At least 1 special character\n- Minimum 6 characters"
        );
        e.preventDefault();
        return;
      }
    });
  </script>

</body>
</html>
